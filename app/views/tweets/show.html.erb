<h2><%= flash.now[:alert] %></h2>
<h1 class="text-center">過去投稿の詳細</h1>
<%= render 'flash' %>
<table class="table table-bordered  my-5 mx-auto table-show ">
  <tbody >
    <tr>
      <th scope="col">再投稿の状態</th>
        <%= render partial: 'flag_btn', locals: { tweet: @tweet }%>
    </tr>
    <tr>
      <th scope="col">投稿日時</th>
      <td><%= l @tweet.tweet_created_at, format: :short%></td>
    </tr>
    <%= render partial: 'show_column', locals: { heading: "投稿内容",column_data: @tweet.text}%>
    <tr>
      <th scope="col" class="show_media_row">画像</th>
      <td>
        <% @tweet.media.each do |media| %>
          <%= image_tag media.media_url.to_s,class: "show_tweet_media m-1" %>
        <% end %>
      </td>
    </tr>
    <%= render partial: 'show_column', locals: { heading: "リツイート数",column_data: @tweet.retweet_count}%>
    <%= render partial: 'show_column', locals: { heading: "いいね数",column_data: @tweet.favorite_count}%>
  </tbody>
</table>

 <div class="text-center ">

   <button type="button" class="btn btn-warning " data-toggle="modal" data-target="#modal2" value=@tweet>
   再投稿する
  </button>
  <%= render 'tweet_modal' %>
  <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modal1" value=@tweet>
    リツイートする
  </button>
  <%= render 'retweet_modal' %>

 </div>
