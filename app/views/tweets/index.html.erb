<div class="container text-center ">

<% if logged_in? %>
<h2 class="text-center mt-5 mb-3">ツイートの一覧</h2>
<%= render 'flash' %>
<%# 検索ボックス %>
<%= search_form_for(@q,url: root_path) do |f| %>
<div class="table-responsive">
  <table class="table table-bordered table_search ">
    <tbody>
      <tr>
        <th scope="row" ><%= f.label :tweet_flag %></th>
        <td>
          <%= f.radio_button :tweet_flag_eq, true %>含める
          <%= f.radio_button :tweet_flag_eq, false %>含めない
        </td>
        <td rowspan= 5 class="pb-o align-middle search_btn">
          <%= f.submit "絞り込む" ,class:"btn btn-primary"%>
        </td>
      </tr>
      <tr>
        <th scope="row" ><%= f.label :retweet_flag %></th>
        <td >
          <%= f.radio_button :retweet_flag_eq, true %>含める
          <%= f.radio_button :retweet_flag_eq, false %>含めない
        </td>
      </tr>
      <tr>
        <th scope="row"><%= f.label :tweet_created_at %></th>
        <td >
          <%= f.radio_button :tweet_created_at_lteq, @now.ago(2.years)%>2年以上前
          <%= f.radio_button :tweet_created_at_lteq,@now.ago(1.years) %>1年以上前
          <%= f.radio_button :tweet_created_at_lteq	,@now.ago(6.month)%>半年以上前
        </td>
      </tr>
      <tr>
        <th scope="row"><%= f.label :retweet_count%></th>
        <td>
          <%= f.number_field :retweet_count_gteq,min:"0"%>以上〜
        </td>
      </tr>
      <tr>
        <th scope="row"><%= f.label :favorite_count %></th>
        <td>
          <%= f.number_field :favorite_count_gteq,min:"0"%>以上〜
        </td>
      </tr>
    </tbody>
  </table>
  </div>
<% end %>

<h4 class="text-left my-5 font-weight-bold">検索結果：<%= @q.result(distinct: true).count %>件</h4>

<%# ツイート一覧表示 %>
<% if @tweets.blank?  %>
  <p class="text-center">該当データがありません</p>
<% else %>

  <table class="table table-striped text-center table_index align-middle " >
    <thead>
    <tr style="width=100%;">
      <th scope="col"class="table-title"></th>
      <th scope="col"class="day" ><%= sort_link(@q, :tweet_created_at, "投稿日時" ,{ default_order: :desc }, { class: "Editlink" }) %></th>
      <th scope="col" class="text">投稿内容</th>
      <th scope="col" class="table-title">投稿画像</th>
      <th scope="col"class="table-title" ><%= sort_link(@q, :retweet_count, "リツイート", { default_order: :desc }, { class: "Editlink" }) %></th>
      <th scope="col"class="table-title" ><%= sort_link(@q, :favorite_count, "いいね", { default_order: :desc }, { class: "Editlink" }) %></th>
      <th scope="col"class="table-title "></th>
    </tr>
    </thead>
    <tbody >
      <%@tweets.each do |tweet|%>
        <tr>
          <%= render partial: 'flag_btn', locals: { tweet: tweet } ,class:"t-column"%>
          <td  class="align-middle day" ><%= l tweet.tweet_created_at, format: :short%></td>
          <td class="box-read  align-middle text"><%= tweet.text %></td>
          <td class="media-row align-middle t-column" >
            <% tweet.media.each_with_index do |media,index| %>
              <% if index==0 %>
                <%= image_tag media.media_url.to_s,class: "tweet_media m-1 align-middle t-column" %>           
              <% end %>
            <% end %>
          </td>
          <td class="align-middle t-column"><%= tweet.retweet_count%></td>
          <td class="align-middle t-column"><%= tweet.favorite_count%></td>
          <td class="align-middle t-column" ><%= link_to "詳細", tweet,class:"btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @tweets%>
<% end %>
<% else %> 
  <%= link_to 'Twitterアカウントでログイン', "/auth/twitter" ,class:"btn btn-primary login_btn m-5" %>
<% end %>
</div>


