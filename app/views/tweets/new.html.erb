<div class="container text-center tweet_save_form">

  <h2 class="mt-5">ツイートの保存</h2>
<%= render 'flash' %>
  <div class="bg-light m-3 p-5 ">
    <div class="show-api-count p-4 border border-dark ">
      今月の残り取得件数:
    </div>

    <%= form_with model: @tweet, url: tweets_search_path, local: true do |f| %>
      <div class="p-4">
        <div class="text-left px-4">
          <h5><label>
            <%= f.radio_button :period, search_period(10.years, 1.year) %> 〜1年前
          </label></h5>
          <h5><label>
            <%= f.radio_button :period, search_period(28.days, 0.year) %> 1年前〜現在
          </label></h5>
          <% if session[:last_search_created_at] %>
            <h5><label>
              <%= f.radio_button :period, "before_query" %>前回未取得ツイート
            </label></h5>
            <div class="margin-text">
              <%= l @first_day, format: :short %>から<br><%= l @last_search_created_at, format: :short %>
            </div>
          <% end %>
        </div>
        <div class="p-4">
          <h5><label>取得ツイート上限件数</label></h5>
          <h5><label><%= f.select :count, order_tweet_count %></label></h5>
        </div>
      </div>
      <div class="mt-5 mb-1">
        <%= f.submit "取得する", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>