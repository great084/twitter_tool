<div class="container text-center tweet_save_form">

  <h2 class="mt-5">ツイートの保存</h2>
<%= render 'flash' %>
  <div class="bg-light m-3 p-5 ">
    <div class="show-api-count p-4 border border-dark ">
      今月の残り取得件数:
    </div>

    <%= form_with model: @tweet, url: tweets_search_path, local: true do |f| %>
      <div class="p-5">
        <p><label>
          <%= f.radio_button :period, search_period(10.years, 1.year) %>〜1年前
        </label></p>
        <p><label>
          <%= f.radio_button :period, search_period(5.days, 0.year) %>1年前〜現在
        </label></p>
      </p>
      <div class="mt-5 mb-1">
        <%= f.submit "取得する", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>

</div>