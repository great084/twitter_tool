<div class="container text-center">
  <h2><%= flash.now[:alert] %></h2>
  <h1>過去ツイートの保存</h1>

  <div class="bg-light m-5">
    <div class="show-api-count p-4 border border-dark">
      今月の残り取得件数:
    </div>

    <%= form_with model: @tweet, url: tweets_search_path, local: true do |f| %>
      <div class="p-5">
        <h5><label>
          <%= f.radio_button :period, search_period(10.years, 1.year) %> 〜1年前
        </label></h5>
        <h5><label>
          <%= f.radio_button :period, search_period(1.year, 0.year) %> 1年前〜現在
        </label></h5>
        <div class="p-4">
          <h5><label>取得ツイート上限件数</label></h5>
          <h5><label><%= f.select :count, order_tweet_count %></label></h5>
        </div>
      </p>
      <div class="m-4">
        <%= f.submit "取得する", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>