<div class="container text-center">
  <h2><%= flash.now[:alert] %></h2>
  <h1>過去ツイートの保存</h1>

  <div class="bg-light m-5">
    <div class="show-api-count p-4 border border-dark">
      今月の残り取得件数:
    </div>

    <%= form_with model: @tweet, url: tweets_search_path, local: true do |f| %>
      <div class="p-5">
        <p><label><%= f.radio_button :period, "until_one_year" %>〜1年前</label><div>
        <p><label><%= f.radio_button :period, "until_now" %>1年前〜現在</label></p>
      </div>
      <div class="m-5">
        <%= f.submit "取得する", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>

</div>